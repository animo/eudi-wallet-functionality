  "packageManager": "pnpm@9.12.3+sha256.24235772cc4ac82a62627cd47f834c72667a2ce87799a846ec4e8e555e2d4b8b",
  "author": "Animo Solutions",
  "exports": "./src/index.ts",
  "files": ["dist"],
  "publishConfig": {
    "access": "public",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "import": "./dist/index.mjs",
        "require": "./dist/index.js",
        "types": "./dist/index.d.ts"
      },
      "./package.json": "./package.json"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/animo/eudi-wallet-functionality"
  },
  "scripts": {
    "types:check": "tsc --noEmit",
    "style:check": "biome check --unsafe",
    "style:fix": "biome check --write --unsafe",
    "build": "tsup src/index.ts --format cjs,esm --dts --clean --sourcemap",
    "test": "node --import tsx --test tests/*.test.ts",
    "release": "pnpm build && pnpm changeset publish --no-git-tag",
    "changeset-version": "pnpm changeset version && pnpm style:fix"
  },
  "pnpm": {
    "patchedDependencies": {
      "@openid4vc/openid4vp": "patches/@openid4vc__openid4vp.patch"
    }
  },
  "peerDependencies": {
    "@credo-ts/core": "*",
    "@credo-ts/openid4vc": "*"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.29.4",
    "@credo-ts/askar": "0.6.0-alpha-20250915220951",
    "@credo-ts/core": "0.6.0-alpha-20250915220951",
    "@credo-ts/node": "0.6.0-alpha-20250915220951",
    "@credo-ts/openid4vc": "0.6.0-alpha-20250915220951",
    "@openwallet-foundation/askar-nodejs": "^0.3.2",
    "@types/node": "^22.15.29",
    "tsup": "^8.5.0",
    "tsx": "^4.19.4",
    "typescript": "~5.8.3"
  },
  "dependencies": {
    "dcql": "^0.2.22",
    "zod": "^3.25.42"
  }
}
